{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Bun Server",
            "type": "bun",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.ts",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "stopOnEntry": false,
            "watchMode": false,
            "noDebug": false
        },
        {
            "name": "Debug Bun Server (Watch Mode)",
            "type": "bun",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.ts",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "stopOnEntry": false,
            "watchMode": true,
            "noDebug": false
        },
        {
            "name": "Debug Bun Server (Node Adapter)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "bun",
            "runtimeArgs": [
                "--inspect-wait",
                "run",
                "src/index.ts"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outputCapture": "std",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        }
    ]
}